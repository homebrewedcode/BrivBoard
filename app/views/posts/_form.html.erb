<%= form_for(@post) do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Title' %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, 'Body' %><br>
    <%= f.text_area :body, class: 'form-control', rows: '5' %>
  </div>
  <div>
    <%= f.submit class: 'btn btn-lg btn-primary'%>
  </div>
<% end %>
