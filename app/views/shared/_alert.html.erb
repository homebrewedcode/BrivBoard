<% if alert %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <div class="panel-title">
            <%= alert %>
          </div>
          <span class="pull-right clickable" data-effect="fadeOut"><i class="glyphicon glyphicon-remove"></i></span>
        </div>
      </div>
    </div>
  </div>
<% end %>