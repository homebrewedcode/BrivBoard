<%= form_for(@comment) do |f| %>
  <div class="form-group">
    <%= f.label :body, 'New Comment' %><br>
    <%= f.text_area :body, class: 'form-control', rows: '3' %>
    <%= f.hidden_field :post_id %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-lg btn-primary'%>
  </div>
<% end %>
